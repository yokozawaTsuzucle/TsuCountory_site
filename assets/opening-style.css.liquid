@font-face {
  font-family: 'TrajanPro-Regular';
  src: url(../font/TrajanPro-Regular.otf) format('opentype');
}

/* common */
*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
body {
  color: black;
  word-break: break-all;
  font-family :
	YuMincho,    /* Mac用 */
	'Yu Mincho', /* Windows用 */
	serif;
}
li{
  list-style: none;
}
a{
  text-decoration: none;
  color: white;
}
.en{
  font-family: 'TrajanPro-Regular',serif;
  font-weight: 400;
}
@media screen and (max-width : 768px) {
  .over-hidden{
    overflow: initial;
  }
  .site__main__contents{
    overflow: initial;
  }
}

/* opening animation */
.veil{
  width: 100vw;
  
  height: 100vh;
  position: absolute;
  z-index: 999;
}
.top-bg{
  overflow: hidden;
}
.top-bg__catch{
  position: relative;
  display: flex;
  flex-flow: column;
  justify-content: start;
  align-items: center;
  width: 100%;
  height: 100%;
  background-image: url("https://cdn.shopify.com/s/files/1/0616/2949/7533/files/top-sec00-bg.jpg?v=1656841726");/*画像差し替え*/
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.top-bg__txt-opening{
  position: relative;
  z-index: 99;
  width: 700px;
  height: 100%;
  text-align: center;
}
.top-bg__txt-opening--upper,
.top-bg__txt-opening--lower{
  height: 50%;
}
.top-bg__txt-opening--upper{
  padding-top: 26px;
}
.top-bg__txt-opening--upper a{
  display: block;
  width: fit-content;
  margin: 0 auto;
}
.top-bg__txt-opening .opening-title{
  font-size: 26px;
  letter-spacing: .4em;
}
.opening-partition{
  display: block;
  width: 1px;
  height: 130px;
  margin: 40px auto;
  position: relative;
  overflow: hidden;
}
.opening-partition:after{
  width: 1px;
  height: 130px;
  background-color: #fff;
  position: absolute;
	top: -100%;
	left: 0;
  content: "";
}
@keyframes scrollFirst {
  0%{
    top:-100%
  }
  100%{
    top: 0;
  }
}
@keyframes scrollSecond {
  0%{
    top:0
  }
  100%{
    top: 100%;
  }
}
@keyframes scrollDown {
  0%{
    top:-100%
  }
  100%{
    top: 100%;
  }
}
.opening-partition.is-active-first:after{
  animation:scrollFirst 1.25s cubic-bezier(0.76, 0, 0.3, 1) forwards;
}
.opening-partition.is-active-second:after{
  animation:scrollSecond 1.25s cubic-bezier(0.76, 0, 0.3, 1) forwards;
}
.opening-partition.is-scroll:after{
  animation:scrollDown 2.5s cubic-bezier(0.76, 0, 0.3, 1) forwards infinite;
}

.top-bg__txt-opening h1{
  font-size: 17px;
  letter-spacing: .1em;
  font-weight: 400;
}
.top-bg__txt-opening p{
  font-size: 18px;
  letter-spacing: .4em;
  margin-top: 14px;
}
.top-bg__txt-opening .js-hover-animation{
  position: relative;
  display: block;
  width: fit-content;
  margin: 0 auto;
}
.top-bg__txt-opening .js-hover-animation:before,
.top-bg__txt-opening .js-hover-animation:after{
  width: 272px;
  background-color: #fff;
  position: absolute;
	top: 53%;
	left: 4%;
  height: 1px;
  content: "";
}
.top-bg__txt-opening .js-hover-animation:after{
  width: 0;
  background-color: #6F7D6D;
  transition: width .6s cubic-bezier(0.65, 0, 0.35, 1);
}
.top-bg__txt-opening a:hover:after{
  width: 272px;
}

.top-bg {
  color: white;
  transition: background-color 1.9s cubic-bezier(0.215, 0.61, 0.355, 1);
}
.top-bg__contents {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  width: 100%;
  height: 80vh;/*高さ調整*/
}
.top-bg__center{
  position: relative;
  width: 100%;
  height: 100%;
  display: block;
}
.top-bg__center__list {
  width: 100%;
  height: 100%;
}
/*responsive*/
@media screen and (max-width : 768px) {
  .top-bg__catch{
    background-image: url("https://cdn.shopify.com/s/files/1/0616/2949/7533/files/top-sec00-bg--sp.jpg?v=1656841726");/*画像差し替え*/
  }  
  .top-bg__contents{
    overflow: initial;
  }
  .top-bg__txt-opening{
    width: 100vw;
  }
  .top-bg__txt-opening--lower .opening-title{
    font-size: 3.768vw;
  }
  .top-bg__txt-opening h1{
    font-size: 2.463vw;
  }
  .top-bg__txt-opening p{
    font-size: 2.6087vw;
  }
  #top-logo-wrapper{
    will-change: transform,opacity;
    transition-property: transform,opacity;
    width: 80%;
    margin: 0 auto;
  }
  .top-bg__txt-opening--upper a{
    width: 150px;
  }
  .top-bg__txt-opening--upper img{
    width: 100%;
  }
  .top-bg__txt-opening .js-hover-animation:before{
    width: 39.42vw;
  }
  .top-bg__txt-opening a:hover:after{
    width: 39.42vw;
  }
  .opening-partition{
    height: 100px;
    margin: 30px auto;
  }
  .opening-partition:after{
    height: 100px;
  }
}
@media screen and (max-width : 425px) {
  .top-bg__txt-opening--lower .opening-title{
    font-size: 16px;
  }
  .top-bg__txt-opening h1{
    font-size: 16px;
  }
  .top-bg__txt-opening .js-hover-animation:before{
    width: 260px;
  }
  .top-bg__txt-opening a:hover:after{
    width: 260px;
  }
}
@media screen and (max-width : 374px) {
  .top-bg__txt-opening--upper{
    height: 45%;
  }
  .top-bg__txt-opening--lower .opening-title{
    line-height: 1.6;
  }
}

